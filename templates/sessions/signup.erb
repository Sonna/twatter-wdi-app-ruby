<section class="signup">
  <header>
    <h1>signup</h1>
  </header>

  <section class="body">
    <form action="/users" method="post">
      <div class="form-group">
        <label for="name">
          <i class="fas fa-tag"></i>
          Name or Alias<abbr title="required">*</abbr>
        </label>
        <input type="name" name="name" value="<%= params[:name] %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="username">
          <i class="fas fa-user"></i>
          Username<abbr title="required">*</abbr>
        </label>
        <input type="username" name="username" value="<%= params[:username] %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="email">
          <i class="fas fa-envelope"></i>
          email<abbr title="required">*</abbr>
        </label>
        <input type="email" name="email" value="<%= params[:email] %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="password">
          <i class="fas fa-eye"></i>
          password<abbr title="required">*</abbr>
        </label>
        <input type="password" name="password" value="<%= params[:password] %>" class="form-control">
      </div>
      <button>sign up</button>
    </form>
  </section>

  <footer></footer>
</section>
